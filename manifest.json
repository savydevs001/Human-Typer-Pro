{
  "manifest_version": 3,
  "name": "HumanTyper Pro",
  "version": "2.1",
  "description": "Realistic typing simulator for Google Docs with time control",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://docs.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}